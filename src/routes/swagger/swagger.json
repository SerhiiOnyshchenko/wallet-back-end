{
  "swagger": "2.0",
  "info": {
    "description": "This is an online wallet server. Below you can find a detailed documentation regarding all possible requests that our online wallet server can handle. Have fun!  <br /> <br /> <i>P.S. In order to see what fields are required in the request body and their types - click on the <i><strong>Model</strong></i> button next to the <i><strong>Example Value</strong></i>.</i>",
    "version": "1.0.0",
    "title": "eWallet"
  },
  "host": "localhost:8080",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "tags": [
    {
      "name": "users",
      "description": "Operations about user"
    },
    {
      "name": "wallet",
      "description": "Access to eWallet and money operations"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Get list of users",
        "operationId": "getUserInfo",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Operation successful user info",
            "schema": {
              "$ref": "#/definitions/usersInfoSuccess"
            }
          },
          "400": {
            "description": "Invalid credentials supplied",
            "schema": {
              "$ref": "#/definitions/badRequest"
            }
          }
        }
      },
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Registers new user.",
        "description": "This creates a new user.",
        "operationId": "createUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Operation successful. Email sent",
            "schema": {
              "$ref": "#/definitions/registerSuccess"
            }
          },
          "400": {
            "description": "Invalid credentials supplied",
            "schema": {
              "$ref": "#/definitions/badRequest"
            }
          }
        }
      }
    },
    "/wallet": {
      "get": {
        "tags": [
          "wallet"
        ],
        "summary": "Request user balans",
        "description": "This returns user balans.",
        "operationId": "getBalans",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Balans"
            }
          },
          {
            "in": "query",
            "name": "currency",
            "type": "string",
            "description": "The three-letter currency code of the currency you would like to convert to."
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/balansSuccess"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/badRequest"
            }
          }
        }
      }
    },
    "/wallet/transaction": {
      "get": {
        "tags": [
          "wallet"
        ],
        "summary": "Request all users transactions statistics.",
        "description": "This returns all transactions statistics for a given user.",
        "operationId": "getTransactionsStats",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/transactionInfo"
            }
          },
          {
            "in": "query",
            "name": "page",
            "type": "number",
            "description": "The page's number."
          },
          {
            "in": "query",
            "name": "limit",
            "type": "number",
            "description": "The limit transaction, gefault 20."
          },
          {
            "in": "query",
            "name": "sort",
            "type": "string",
            "description": "The sort by sum(Asc) or sum-(Desc) and date(Asc) or date-(Desc), default date-."
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/transactionsSuccess"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/badRequest"
            }
          }
        }
      },
      "post": {
        "tags": [
          "wallet"
        ],
        "summary": "Creates a transaction.",
        "description": "This creates a transaction.",
        "operationId": "createTransaction",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/transactionSuccess"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/badRequest"
            }
          }
        }
      }
    },
    "/wallet/transfer": {
      "post": {
        "tags": [
          "wallet"
        ],
        "summary": "Creates s transfer.",
        "description": "This returns transaction about transfer.",
        "operationId": "createTransferCategories",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Transfer"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/transferSuccess"
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "$ref": "#/definitions/badRequest"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "example": "Avisalom"
        },
        "lastName": {
          "type": "string",
          "example": "Peremychniy"
        }
      },
      "required": [
        "firstName",
        "lastName"
      ]
    },
    "Balans": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "example": "62fdf7483dbc09f0ce097a2f"
        }
      },
      "required": [
        "userId"
      ]
    },
    "transactionInfo": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string",
          "example": "62fdf7483dbc09f0ce097a2f"
        }
      },
      "required": [
        "owner"
      ]
    },
    "registerSuccess": {
      "type": "object",
      "properties": {
        "user": {
          "type": "object",
          "properties": {
            "firstName": {
              "type": "string",
              "example": "Avisalom"
            },
            "lastName": {
              "type": "string",
              "example": "Peremychniy"
            },
            "_id": {
              "type": "string",
              "example": "62fe2e8c7496268b6a9d727b"
            }
          }
        },
        "status": {
          "type": "string",
          "example": "success"
        }
      }
    },
    "badRequest": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "transactionSuccess": {
      "type": "object",
      "properties": {
        "transaction": {
          "$ref": "#/definitions/transactionResponse"
        },
        "status": {
          "type": "string",
          "example": "success"
        }
      }
    },
    "transferSuccess": {
      "type": "object",
      "properties": {
        "transfer": {
          "type": "object",
          "properties": {
            "sum": {
              "type": "number",
              "example": 2500
            },
            "owner": {
              "type": "string",
              "example": "62fd42fcb66e8b5cd05fc77c"
            },
            "recipient": {
              "type": "string",
              "example": "62fd42fcb66e8b5cd05fc77c"
            },
            "description": {
              "type": "string",
              "example": "groceries"
            },
            "category": {
              "type": "string",
              "example": "other"
            },
            "_id": {
              "type": "string",
              "example": "62fe4388b3ad9c18f43f4786"
            },
            "createdAt": {
              "type": "string",
              "example": "2022-05-16T10:34:53.652Z"
            },
            "updatedAt": {
              "type": "string",
              "example": "2022-05-16T10:34:53.652Z"
            }
          }
        },
        "status": {
          "type": "string",
          "example": "success"
        }
      }
    },
    "balansSuccess": {
      "type": "object",
      "properties": {
        "balans": {
          "type": "number",
          "example": "2000"
        },
        "currency": {
          "type": "string",
          "example": "USD"
        },
        "status": {
          "type": "string",
          "example": "success"
        }
      }
    },
    "transactionsSuccess": {
      "type": "object",
      "properties": {
        "transactions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/transactionResponse"
          },
          "example": [
            {
              "sum": 2598,
              "description": "Долг",
              "category": "Переказ коштів",
              "createdAt": "2022-08-18T08:14:43.308Z"
            },
            {
              "sum": 1649,
              "description": "Аванс",
              "category": "Поповнення",
              "createdAt": "2022-08-18T08:14:23.308Z"
            }
          ]
        },
        "page": {
          "type": "number",
          "example": 1
        },
        "status": {
          "type": "string",
          "example": "success"
        }
      }
    },
    "transactionResponse": {
      "type": "object",
      "properties": {
        "typeTransaction": {
          "type": "boolean"
        },
        "sum": {
          "type": "number",
          "example": 2598
        },
        "owner": {
          "type": "string",
          "example": "62fd42fcb66e8b5cd05fc77c"
        },
        "description": {
          "type": "string",
          "example": "groceries"
        },
        "category": {
          "type": "string",
          "example": "other"
        },
        "_id": {
          "type": "string",
          "example": "62fe4388b3ad9c18f43f4786"
        },
        "createdAt": {
          "type": "string",
          "example": "2022-05-16T10:34:53.652Z"
        },
        "updatedAt": {
          "type": "string",
          "example": "2022-05-16T10:34:53.652Z"
        }
      }
    },
    "usersInfoSuccess": {
      "type": "object",
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/usersResponse"
          },
          "example": [
            {
              "_id": "62fe2e8c7496268b6a9d727b",
              "firstName": "Avisalom",
              "lastName": "Peremychniy"
            },
            {
              "_id": "62fe2e8c7496268b6a9d727b",
              "firstName": "Avisalom",
              "lastName": "Peremychniy"
            }
          ]
        },
        "status": {
          "type": "string",
          "example": "success"
        }
      }
    },
    "usersResponse": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "62fe2e8c7496268b6a9d727b"
        },
        "firstName": {
          "type": "string",
          "example": "Avisalom"
        },
        "lastName": {
          "type": "string",
          "example": "Peremychniy"
        }
      }
    },
    "Transaction": {
      "type": "object",
      "properties": {
        "typeTransaction": {
          "type": "boolean"
        },
        "sum": {
          "type": "number"
        },
        "category": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "typeTransaction",
        "sum"
      ]
    },
    "Transfer": {
      "type": "object",
      "properties": {
        "sum": {
          "type": "number",
          "example": 1000
        },
        "owner": {
          "type": "string",
          "example": "62fdf7483dbc09f0ce097a2f"
        },
        "recipient": {
          "type": "string",
          "example": "62fdf7483dbc09f0ce097a2f"
        },
        "category": {
          "type": "string",
          "example": "Переказ коштів"
        },
        "description": {
          "type": "string",
          "example": "Долг"
        }
      },
      "required": [
        "owner",
        "recipient",
        "sum"
      ]
    }
  }
}